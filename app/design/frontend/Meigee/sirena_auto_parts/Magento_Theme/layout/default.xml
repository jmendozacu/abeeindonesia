<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>

        <referenceBlock name="meigee.header">
            <block class="Magento\Cms\Block\Block" name="sirena.header.top.links">
                <arguments>
                    <argument name="block_id" xsi:type="string">sirena_autoparts_header_top_links</argument>
                </arguments>
            </block>
            <referenceBlock name="logo">
                <arguments>
                    <argument name="logo_file" xsi:type="string">images/logo_white.png</argument>                    
                </arguments>
            </referenceBlock>
        </referenceBlock>

        <referenceBlock name="sirena.header.social.links" remove="true" />

    </body>
</page>
